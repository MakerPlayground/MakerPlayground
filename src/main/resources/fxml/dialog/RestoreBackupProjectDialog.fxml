<fx:root id="unsaved-dialog" alignment="TOP_CENTER" stylesheets="@../../css/dialog/UnsavedDialog.css" type="VBox" spacing="15" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox id="HBox-header" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Text id="unsaved-text" strokeType="OUTSIDE" strokeWidth="0.0" text="Project Recovery" wrappingWidth="500.0" textAlignment="CENTER" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
      <ImageView fitHeight="108.0" fitWidth="87.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../css/dialog/warning.png" />
         </image>
      </ImageView>
      <Label id="unsaved-message" text="Do you want to recover the latest unsaved project?" textAlignment="CENTER" />
      <HBox id="HBox" alignment="TOP_CENTER" prefHeight="50.0" prefWidth="525.0">
         <children>
            <Button id="unsaved-button" fx:id="skipButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Skip">
               <HBox.margin>
                  <Insets left="5.0" right="10.0" />
               </HBox.margin></Button>
            <Button id="unsaved-button" fx:id="openButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Recover">
               <HBox.margin>
                  <Insets left="10.0" right="5.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </children>
</fx:root>
